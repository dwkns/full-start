{%- macro render(
    imageUrl = "",
    imageAlt = "",
    title ="",
    summary ="",
    category ="",
    categorySlug="",
    postUrl="",
    author="",
    authorImage="",
    authorUrl="",
    dateTime,
    readTime=""
    ) -%}
  <div class="flex flex-col overflow-hidden rounded-lg shadow-lg">
    <div class="flex-shrink-0">
      <img class="object-cover w-full h-48" src="{{imageUrl}}" alt="{{imageAlt}}">
    </div>
    <div class="flex flex-col justify-between flex-1 p-6 bg-white">
      <div class="flex-1">
        <p class="text-sm font-medium text-indigo-600">
          <a href="{{categorySlug}}" class="hover:underline">{{category}}</a>
        </p>
        <a href="{{postUrl}}" class="block mt-2">
          <p class="text-xl font-semibold text-gray-900">{{title}}</p>
          <p class="mt-3 text-base text-gray-500">{{summary}}</p>
        </a>
      </div>
      <div class="flex items-center mt-6">
        <div class="flex-shrink-0">
          <a href="{{authorUrl}}">
            <span class="sr-only">{{author}}</span>
            <img class="w-10 h-10 rounded-full" src="{{authorImage}}" alt="{{author}} portrait">
          </a>
        </div>
        <div class="ml-3">
          <p class="text-sm font-medium text-gray-900">
            <a href="{{authorUrl}}" class="hover:underline">{{author}}</a>
          </p>
          <div class="flex space-x-1 text-sm text-gray-500">
            <time datetime="{{dateTime}}">
              {{dateTime | readableDate}}</time>
            <span aria-hidden="true">&middot;</span>
            <span>{{readTime}}</span>
          </div>
        </div>
      </div>
    </div>
  </div>
{%- endmacro -%}