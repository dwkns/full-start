<div class="dwkns-container py-4">
  <nav class="flex items-center justify-between flex-wrap text-brand">

    <div id="site-logo-header">
      <a href="/" class="cursor-pointer flex items-center">
        {% inlineSVG "./src/images/site-logo.svg", { class: "fill-current h-12 w-auto mr-4" } %}
        <span class="font-semibold text-2xl tracking-tight">{{site.name}}</span>
      </a>
    </div>

    <div class="block lg:hidden">
      <button id="mobileNavButton" class="flex items-center">
        <svg class="fill-current h-6 w-6" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
          <title>Menu</title><path d="M0 3h20v2H0V3zm0 6h20v2H0V9zm0 6h20v2H0v-2z"/></svg>
      </button>
    </div>

    <div id="main-nav" class="w-full lg:flex items-center lg:w-auto hidden">
      <div class="text-lg font-semibold lg:flex-row">
        {%- for navItem in nav.main -%}
          {%- if navItem.showInMainNav -%}
            {%- if navItem.type == "link" -%}
              <a href="{{navItem.url}}" class="hover:underline cursor-pointer block mt-4 lg:inline-block lg:mt-0 mr-6">{{navItem.name}}</a>
            {%- else -%}
              <a href="{{navItem.url}}" class="hover:underline cursor-pointer block mt-4 lg:inline-block px-4 py-2 leading-none rounded bg-brand text-white lg:mt-0 ">{{navItem.name}}</a>
            {%- endif -%}
          {%- endif -%}
        {%- endfor -%}
      </div>
    </div>

  </nav>
</div>