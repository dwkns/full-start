{%- set inactive = 'flex items-center justify-center pt-1 mx-1 text-white border bg-green-200 border-green-200 border-solid rounded-full' -%}
{%- set  selected = 'flex items-center justify-center pt-1 mx-1 border border-green-500 border-solid rounded-full cursor-default' -%}
{%- set button = 'flex items-center justify-center pt-1 mx-1 text-white bg-green-500 border border-green-500 border-solid rounded-full hover:text-green-500 hover:bg-white' -%}


 {% import "_components/_cards/_postCard.njk" as postCard with context %}
 

{%- set baseURL = '/blog' -%}

<section class="mx-auto my-24 max-w-screen-3xl px-u2-pad">
  <h1 class="text-4xl">{{title}}</h1>
  <p class="w-3/6 mt-3 text-xl text-gray-500 sm:mt-4">
          Lorem ipsum dolor sit amet consectetur, adipisicing elit. Ipsa libero labore natus atque, ducimus sed.
        </p>

  {# <p class="">name:{{allPosts.name}}</p>
  <p class="">isFirstPage:{{allPosts.isFirstPage}}</p>
  <p class="">isLastPage:{{allPosts.isLastPage}}</p>
  <p class="">currentPage:{{allPosts.currentPage}}</p>
  <p class="">totalPages:{{allPosts.totalPages}}</p>
  <p class="">categoryData:{{allPosts.categoryData |console|safe}}</p> #}

  {# {{allPosts |console|safe}} #}
  <ul class="flex mt-8 text-xs font-semibold leading-tight text-green-500">
    {%- for category in allPosts.categoryData -%}
      {%- if allPosts.name == category.name -%}
        <li aria-current="page" class="px-4 h-10 {{selected}} ">{{category.name}} ({{category.numberOfPosts}})</li>
      {%- else -%}
        <li>
          <a href="{{baseURL}}{{ category.slug if category.slug != '/' else ''}}/" class="flex px-4 h-10 {{button}}">{{category.name}}
            <span class="ml-2 text-green-200 text">({{category.numberOfPosts}})</span></a>
        </li>
      {%- endif -%}

    {%- endfor -%}
  </ul>

<div class="grid grid-cols-12 gap-12 mt-8">
  {%- for post in allPosts.items -%}

  {# <div class="grid max-w-lg gap-5 mx-auto mt-12 lg:grid-cols-3 lg:max-w-none"> #}
     
      <div class="col-span-4">
        {{postCard.render(
          imageUrl = "https://images.unsplash.com/photo-1496128858413-b36217c2ce36?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1679&q=80",
          imageAlt = "",
          title = post.data.title,
          summary = "Lorem ipsum dolor sit amet consectetur adipisicing elit. Architecto accusantium praesentium eius, ut atque fuga culpa, similique sequi cum eos quis dolorum.",
          category =post.data.contentMetadata.category,
          categorySlug="/article/",
          type=post.data.contentMetadata.type,
          postUrl=post.url ,
          author="Darrell Wilkins",
          authorImage="https://images.unsplash.com/photo-1472099645785-5658abf4ff4e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=facearea&facepad=2&w=256&h=256&q=80",
          authorUrl="#",
          dateTime="2021-10-25T00:00:00.000Z" ,
          readTime="6 min read"
             )}}
      </div>


    {# <article class="px-4 py-2 mt-4 bg-gray-300 rounded-xl">
